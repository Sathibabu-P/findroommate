


      <!-- Content Wrapper. Contains page content -->
       <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
           Rules
            
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Data Management</a></li>
            <li class="active">Rules</li>
          </ol>
        </section>
             <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
           <div class="box">
               <%= link_to new_rule_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Rule
  <% end %>
                <div class="box-body">
                 <table id="areas" class="table table-bordered table-striped">
                    <thead>
                      <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        
                      </tr>
                    </thead>

                    <tbody>
                      <%= content_tag_for(:tr, @rules) do |rule| %>
                            <td><%= rule.name %></td>
                            <td><%#= link_to 'Show', rule %>
                        <%= link_to 'Edit', edit_rule_path(rule) %>
                        <%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      <% end %>
                    </tbody>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
      </div><!-- /.content-wrapper -->
       </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
<script type="text/javascript">

      $( document ).ready(function() {
     
        $('#areas').DataTable();
      });