 <div class="row">
    
        <div class="col-md-12 toppad" >
   
   
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Sheena Kristin A.Eschor</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center">
                  <a href="javascript:void(0)" id="uploadIcon">
                    <%=image_tag(@profile.picture.url(:thumb), class: 'img-circle img-responsive')%>
                  </a>
                
                <form id="UserProfile" method="post" enctype="multipart/form-data">
                   <input type="file" value="upload" id="uploadFile" class="uploadFile" />
                </form>

                 
                <%= link_to 'DEL',  delete_profile_pic_path(:id => @profile.id),  method: :delete, data: { confirm: 'Are you sure?' } %>
              
                </div>  
              
                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>First Name:</td>
                        <td><%=@profile.first_name%></td>
                      </tr>
                      <tr>
                        <td>Last Name:</td>
                        <td><%=@profile.last_name%></td>
                      </tr>
                      <tr>
                        <td>Date of Birth</td>
                        <td><%=@profile.dob%></td>
                      </tr>
                   
                         <tr>
                             <tr>
                        <td>Gender</td>
                        <td><%=@profile.gender%></td>
                      </tr>
                        <tr>
                        <td>Home Address</td>
                        <td><%=@profile.address%></td>
                      </tr>
                      <tr>
                        <td>Email</td>
                        <td><a href="mailto:info@support.com"><%=@profile.user.email%></a></td>
                      </tr>
                        <td>Phone Number</td>
                        <td>123-4567-890(Landline)<br><br><%=@profile.phone_no%>(Mobile)
                        </td>
                           
                      </tr>
                     
                    </tbody>
                  </table>
                  
                  
                </div>
              </div>
            </div>
                 <div class="panel-footer">                       
                        <span class="pull-right">
                           
                             <%= link_to "Update", edit_profile_path(@profile) %>         
                        </span>
                    </div>
            
          </div>
        </div>
      </div>
<style type="text/css">
      .user-row {
        margin-bottom: 14px;
    }

    .user-row:last-child {
        margin-bottom: 0;
    }

    .dropdown-user {
        margin: 13px 0;
        padding: 5px;
        height: 100%;
    }

    .dropdown-user:hover {
        cursor: pointer;
    }

    .table-user-information > tbody > tr {
        border-top: 1px solid rgb(221, 221, 221);
    }

    .table-user-information > tbody > tr:first-child {
        border-top: 0;
    }


    .table-user-information > tbody > tr > td {
        border-top: 0;
    }
    .toppad
    {margin-top:20px;
    }
.uploadFile {
   visibility : hidden;
}
</style>

<script type="text/javascript">
$("#uploadIcon").click(function(){
        $(this).next().find('input').trigger('click');
    });
 $('#uploadFile').change(function(evt) {
        // alert($(this).val());

        // evt.preventDefault();
         var formData = new FormData($('#UserProfile')[0]);
        // var formData = new FormData();
        // jQuery.each(jQuery('#uploadFile')[0].files, function(i, file) {
        //     formData.append('file-'+i, file);
        // });

         $.ajax({
           url: '/profilepic_upload',
           type: 'POST',
           data: formData,
           enctype: 'multipart/form-data',
           processData: false,
           success: function (response) {
             window.location.reload();
           }
         });

       return false;

  });
</script>
