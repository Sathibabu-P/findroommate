<%= simple_form_for(@profile, html: { class: "form-horizontal", role: "form" ,:multipart => true}) do |f| %>
  <% if @profile.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h4>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
    <div class="col-sm-8">
      <%= f.input :first_name, class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    
    <div class="col-sm-8">
      <%= f.input :last_name, class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    
    <div class="col-sm-8">

         <%= f.input :gender, collection: [  "Male", "Female"], prompt: "Select Gender", selected: @profile.gender %>    

    </div>
  </div>
  <div class="form-group">
    
    <div class="col-sm-8">
      <%= f.input :phone_no, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    
    <div class="col-sm-8">
      <%= f.input :dob, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    
    <div class="col-sm-8">
      <%= f.input :address, class: "form-control" %>
    </div>
  </div>

  
    <div class="form-group">
    
    <div class="col-sm-8">

         <%= f.input :occupation, collection: [  "Student", "Employee", "Doesn't matter" ], prompt: "Select Room Type", selected: @profile.occupation %>    

    </div>
  </div>

   <div class="form-group">
    
    <div class="col-sm-8">
      <%= f.input :myself, class: "form-control" %>
    </div>
  </div>

   <div class="form-group">
   <div class="col-sm-8">
    <%= f.file_field :picture, class: 'form-control'%>
  </div>
  </div>
 
  <div class="form-group">
    <div class="">
      <%= f.button :submit ,class: "btn btn-primary"%>
   
    </div>
  </div>
<% end %>



 <script type="text/javascript">
 var nowDate = new Date();
 var today = new Date(nowDate.getFullYear(), nowDate.getMonth(), nowDate.getDate(), 0, 0, 0, 0);
  $(document).ready(function(){
    $('#room_available_from').datepicker({
      format: 'dd/mm/yyyy',
      todayHighlight:'TRUE',
      autoclose: true,
      startDate: today 
    });
  });
</script>