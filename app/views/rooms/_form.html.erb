<%= form_for(@room, html: { class: "form-horizontal", role: "form" ,:multipart => true}) do |f| %>
  <% if @room.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h4>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :description, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :room_type, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
    <%=select_tag "room_type", options_for_select([ "Flat", "House", "Single" ], "Single"),class: "form-control"%>

    </div>
  </div>

   <div class="form-group">
    <%= f.label :bedrooms, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.number_field :bedrooms, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :bathrooms, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.number_field :bathrooms, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :roomrent, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :roomrent, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :roomsfor_rent, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.number_field :roomsfor_rent, class: "form-control" %>
    </div>
  </div>
 
    <div class="form-group">
    <%= f.label :available_from, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.date_field :available_from, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :minimumstay, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.number_field :minimumstay, class: "form-control" %>
    
    </div>
  </div>
    <div class="form-group">
    <%= f.label :current_roommates, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.number_field :current_roommates, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :prefred_age, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.number_field :prefred_age, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :prefred_gender, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
    <%=select_tag "prefred_gender", options_for_select([ "Male", "Female", "Doesn't matter" ], "Male"),class: "form-control"%>

    </div>
  </div>
    <div class="form-group">
    <%= f.label :prefred_occupation, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
    <%=select_tag "prefred_occupation", options_for_select([ "Student", "Employee", "Doesn't matter" ], "Student"),class: "form-control"%>

    </div>
  </div>

  <div class="form-group">
    <label class= "col-sm-4 control-label">Amenities</label>
 
    <div class="col-sm-6">
      
    <%@amenities.each do |amenity|%>
      <%= check_box_tag "room[amenity_ids][]", amenity.id, @room.amenities.include?(amenity) %>
      <%= amenity.name %>
      <%end%>
    </div>
  </div>

    <div class="form-group">
    <label class= "col-sm-4 control-label">Rules</label>
 
    <div class="col-sm-6">
      <%@rules.each do |rule|%>
       <%= check_box_tag "room[rule_ids][]", rule.id, @room.rules.include?(rule) %>
      <%= rule.name %>
      <%end%>

    </div>
  </div>
 

<div class="form-group">
    <%= f.label :pictures, :class => 'col-sm-4 control-label' %>
     <div class="col-sm-6">    
      <%= file_field_tag "pictures[]", type: :file, multiple: true, class: "form-control"%>
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-6">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
